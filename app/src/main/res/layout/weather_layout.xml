<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#484E61"
        android:weightSum="1">

        <Button
            android:text="Button"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:id="@+id/switch_city"/>

        <TextView
            android:text="TextView"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/city_name"
            android:textSize="24sp"
            android:textColor="#fff"
            android:textAlignment="center"
            android:gravity="center_vertical"
            tools:ignore="HardcodedText"
            android:layout_weight="0.97"/>

        <Button
            android:text="Button"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:id="@+id/refresh"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="#27A5F9"
        >

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/publish_parent"
            android:layout_marginRight="58dp"
            android:layout_marginEnd="58dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#FFF"
            android:textSize="18sp"
            tools:ignore="HardcodedText"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="486dp"
        android:background="#27A5F9"
        android:id="@+id/weather_info">

        <TextView
            android:text="~"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/temp1"
            android:layout_toRightOf="@+id/temp1"
            android:layout_toEndOf="@+id/temp1"
            android:id="@+id/textView6"
            android:textColor="#FFF"
            android:textSize="40sp"
            tools:ignore="HardcodedText"/>

        <TextView
            android:text="Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView6"
            android:layout_toRightOf="@+id/textView6"
            android:layout_toEndOf="@+id/textView6"
            android:id="@+id/temp2"
            android:textColor="#FFF"
            android:textSize="40sp"
            tools:ignore="HardcodedText"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="121dp"
            android:id="@+id/current"
            android:textColor="#FFF"
            android:textSize="18sp"
            tools:ignore="HardcodedText"
            android:layout_marginLeft="97dp"
            android:layout_marginStart="97dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:id="@+id/weather_desp"
            android:textColor="#FFF"
            android:textSize="40sp"
            tools:ignore="HardcodedText"
            android:layout_below="@+id/current"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:text="Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temp1"
            android:textColor="#FFF"
            tools:ignore="HardcodedText"
            android:textSize="40sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_below="@+id/weather_desp"
            android:layout_alignLeft="@+id/current"
            android:layout_alignStart="@+id/current"/>

    </RelativeLayout>
</LinearLayout>